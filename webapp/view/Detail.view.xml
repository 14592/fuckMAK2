<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:core="sap.ui.core"
        controllerName='de.nak.minibar.controller.Detail'>
    <Page
            title="{i18n>main.PageTitle}"
            showNavButton="true"
            navButtonPress="onNavButtonPress">
        <headerContent>
            <Button text="{i18n>main.SCButton}" press="onSCButtonPress"/>
        </headerContent>
        <content>
            <Toolbar>
                <Title text="{minibar>Name}" level="H1"/>
            </Toolbar>
            <f:SimpleForm layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="{i18n>detail.Price}" labelFor="inputPrice"/>
                    <Input id="inputPrice" value="{= parseFloat(${minibar>Price})} {minibar>Currency}" enabled="false"/>
                    <Label text="{i18n>detail.Description}" labelFor="textareaDescription"/>
                    <TextArea id="textareaDescription" value="{minibar>Description}" enabled="false"/>
                    <Label text="{i18n>detail.Amount}" labelFor="inputAmount"/>
                    <ComboBox id="inputAmount" placeholder="{i18n>detail.selectAmount}">
                        <core:Item key="key1" text="1"/>
                        <core:Item key="key2" text="2"/>
                        <core:Item key="key3" text="3"/>
                        <core:Item key="key4" text="4"/>
                        <core:Item key="key5" text="5"/>
                        <core:Item key="key6" text="6"/>
                        <core:Item key="key7" text="7"/>
                        <core:Item key="key8" text="8"/>
                        <core:Item key="key9" text="9"/>
                        <core:Item key="key10" text="10"/>
                    </ComboBox>
                    <Label text="" labelFor="inputSCButton"/>
                    <Button id="inputSCButton" text="{i18n>shoppingcart.AddToShoppingcart}" press="onAddToSCPress" float="right"/>
                </f:content>
            </f:SimpleForm>
        </content>
    </Page>
</mvc:View>
