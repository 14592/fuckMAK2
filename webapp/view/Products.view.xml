<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName='de.nak.minibar.controller.Products'>

    <Page title="{i18n>main.PageTitle}"
          showNavButton="true"
          navButtonPress="onNavButtonPress">
        <content>
            <List headerText="{i18n>products.HeaderText}"
                  items="{ path: 'minibar>/PRODUCTSet'}"
                  growing="true"
                  growingThreshold="100"
                  enableBusyIndicator="true">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>products.PageText}" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{minibar>Name}"

                                  press="onItemPress"
                                  type="Navigation"
                />
            </List>
        </content>
    </Page>
</mvc:View>
