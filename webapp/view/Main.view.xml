<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName='de.nak.minibar.controller.Main'>
    <Page title="{i18n>main.PageTitle}">
        <headerContent>
            <Button text="{i18n>main.SCButton}" press="onSCButtonPress"/>
        </headerContent>
        <content>
            <List headerText="{i18n>main.headerText}"
                  items="{ path: 'minibar>/CATEGORYSet'}"
                  growing="true"
                  growingThreshold="100"
                  enableBusyIndicator="true">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>main.PageText}" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{minibar>Name}"

                                  press="onItemPress"
                                  type="Navigation"
                />
            </List>
        </content>
    </Page>
</mvc:View>



