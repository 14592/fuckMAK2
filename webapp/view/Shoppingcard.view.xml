<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName='de.nak.minibar.controller.Shoppingcard'>
    <Page title="{i18n>main.PageTitle}"
          showNavButton="true"
          navButtonPress="onNavButtonPress">
        <content>
            <List headerText="{i18n>main.headerText}"
                  items="{ path: 'minibar>/SHOPPINGCARDSet'}"
                  growing="true"
                  growingThreshold="100"
                  enableBusyIndicator="true">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>mainPageText}" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{minibar>Name}"
                                  textarea="{minibar>Amount}"
                />
            </List>
        </content>
    </Page>
</mvc:View>
